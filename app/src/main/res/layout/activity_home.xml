<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="271dp"
        android:layout_height="197dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/puskes" />

    <TextView
        android:id="@+id/pengumumanVaksin"
        android:layout_width="340dp"
        android:layout_height="134dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:singleLine="false"
        android:text="Untuk Jadwal Vaksinasi berikutnya adalah 28 Juli 2021. Vaksin Dosis ke 2 Sinovac. Jangan Lupa Membawa KTP! Untuk Dosis 1, Harap Datang Pagi Jam 7 - Jam 10"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonLokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi Kami" />

</LinearLayout>